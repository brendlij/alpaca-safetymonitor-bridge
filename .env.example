# Alpaca Safety Monitor Bridge Configuration
# Copy this file to .env and adjust values as needed

# Server Configuration
NODE_ENV=production

# Web Interface and Alpaca API Port
WEB_PORT=8085

# ASCOM Discovery Port (UDP)
ASCOM_DISCOVERY_PORT=32227

# File Paths
CONFIG_PATH=/app/data/config.json

# Default Device Settings (can be overridden via web interface)
DEVICE_NAME=default
DEFAULT_SAFE=false

# MQTT Configuration (can be overridden via web interface)
MQTT_URL=mqtt://localhost:1883
MQTT_USER=
MQTT_PASS=

# Optional: Logging Configuration
LOG_LEVEL=info
LOG_PATH=/app/logs/app.log